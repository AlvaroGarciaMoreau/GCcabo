# Habilita WebAssembly para Flutter Web (CanvasKit)
<IfModule mod_headers.c>
  # Ajusta la CSP para permitir Wasm (wasm-unsafe-eval). Si tu hosting no acepta esto, contacta soporte IONOS.
  Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; object-src 'none';"
</IfModule>

<IfModule mod_mime.c>
  # Asegura el tipo MIME correcto para archivos .wasm
  AddType application/wasm .wasm
</IfModule>

